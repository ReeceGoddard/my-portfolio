{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
